import java.util.*;
public class Dungeon {
    private int killCount;
    ArrayList<Enemy> badGuys = new ArrayList<Enemy>();
    public Dungeon() {
        Bandit a = new Bandit(50, 8);
        badGuys.add(a);
        Bandit b = new Bandit(75, 10);
        badGuys.add(b);
        Bandit c = new Bandit(90, 14);
        badGuys.add(c);
        Bandit d = new Bandit(100, 17);
        badGuys.add(d);
    }

    public Enemy getEnemy() {
        return badGuys.get(0);
    }

    public void killCurrentEnemy() {
        badGuys.remove(0);
    }

    public void setKillCount(int k) {
        killCount = k;
    }

    public int getKillCount() {
        return killCount;
    }
    
    public void drop() {
        badGuys.get(0).dropGold();
    }
}
