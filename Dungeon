import java.util.*;
public class Dungeon {
    private int killCount;
    ArrayList<Enemy> BadGuys = new ArrayList<Enemy>();
    public Dungeon() {
        Bandit a = new Bandit();
        a.setHealth(50);
        a.setAttackDmg(8);
        BadGuys.add(a);
        Bandit b = new Bandit();
        b.setHealth(75);
        b.setAttackDmg(10);
        BadGuys.add(b);
        Bandit c = new Bandit();
        BadGuys.add(c);
    }

    public Enemy getEnemy() {
        return BadGuys.get(0);
    }

    public void killCurrentEnemy() {
        BadGuys.remove(0);
    }

    public void setKillCount(int k) {
        killCount = k;
    }

    public int getKillCount() {
        return killCount;
    }
}
